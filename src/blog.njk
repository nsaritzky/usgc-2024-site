{% extends "src/_includes/base.njk" %}

{% block content %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-6">Blog Posts</h1>
        <ul class="list-none">
            {% for post in collections.blog %}
                <li class="mb-4">
                    <a href="{{ post.url }}" class="text-2xl text-blue-600 hover:text-blue-800 font-semibold">
                        {{ post.data.title }}
                    </a>
                    <p class="text-sm text-gray-600">Published on {{ post.date | dateReadable }}</p>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
